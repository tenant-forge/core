{
    "name": "tenantforge/core",
    "description": "This is my package core",
    "keywords": [
        "tenant-forge",
        "laravel",
        "core"
    ],
    "homepage": "https://github.com/tenant-forge/core",
    "support": {
        "issues": "https://github.com/tenant-forge/core/issues",
        "source": "https://github.com/tenant-forge/core"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Francisco Barrento",
            "email": "francisco.barrento@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "filament/filament": "^4.0",
        "laravel/sanctum": "^4.2",
        "spatie/laravel-package-tools": "^1.92.7",
        "stancl/tenancy": "^3.9"
    },
    "require-dev": {
        "larastan/larastan": "^3.6",
        "laravel/pint": "^v1.24.0",
        "nunomaduro/collision": "^v8.8.2",
        "orchestra/testbench": "^v10.4.0",
        "pestphp/pest": "^v4.0.0",
        "pestphp/pest-plugin-laravel": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.0",
        "rector/rector": "^2.0.18"
    },
    "autoload": {
        "psr-4": {
            "TenantForge\\": "src/",
            "TenantForge\\Database\\Factories\\": "database/factories/",
            "TenantForge\\Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "TenantForge\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@php ./vendor/bin/testbench package:discover --ansi",
            "@php ./vendor/bin/testbench filament:install --no-interaction",
            "@php ./vendor/bin/testbench filament:upgrade --ansi"
        ],
        "refactor": "rector",
        "build": [
            "@prepare",
            "@clear",
            "@php vendor/bin/testbench workbench:build"
        ],
        "build:assets": "npm run build",
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:lint": [
            "pint --test",
            "npm run test:lint"
        ],
        "test:unit": "pest --parallel --coverage --min=50.0",
        "test:types": "phpstan",
        "test:refactor": "rector --dry-run",
        "test": [
            "@test:type-coverage",
            "@test:unit",
            "@test:lint",
            "@test:types",
            "@test:refactor"
        ],
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TenantForge\\TenantForgeServiceProvider"
            ],
            "aliases": {
                "TenantForge": "TenantForge"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

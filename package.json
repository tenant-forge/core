{
    "private": true,
    "type": "module",
    "scripts": {
        "dev:styles": "postcss resources/css/index.css -o resources/dist/core.css --watch",
        "dev:scripts": "node bin/build.js --dev",
        "build:styles": "postcss resources/css/index.css -o resources/dist/core.css && npm run purge",
        "build:scripts": "node bin/build.js",
        "purge": "filament-purge -i resources/dist/core.css -o resources/dist/core.css -v 3.x",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.2",
        "@tailwindcss/postcss": "^4.0.0-alpha.26",
        "autoprefixer": "^10.4.14",
        "esbuild": "^0.19.2",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.26",
        "postcss-cli": "^10.0.0",
        "postcss-import": "^15.1.0",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.2.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4.1.11"
    }
}
